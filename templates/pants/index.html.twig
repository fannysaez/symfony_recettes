{% extends 'base.html.twig' %}

{% block title %}Gestions des pantalons!{% endblock %}

{% block body %}

<div class="container-fluid d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 500px;">
        <h1 class="mb-4 text-center">Ajouter un pantalon</h1>

        <div class="mt-4">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

            <!-- Champ "Nom du pantalon" avec un espacement sous le champ -->
            <div class="form-group mb-3">
                {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>

            <!-- Champ "Brand" avec un espacement sous le champ -->
            <div class="form-group mb-3">
                {{ form_row(form.brand, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group mb-3">
                {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group mb-3">
                {{ form_row(form.price, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group mb-3">
                {{ form_row(form.categories, {'attr': {'class': 'form-control'}}) }}
            </div>

            <!-- Boutons alignés côte à côte et centrés -->
            <div class="d-flex justify-content-center mt-3">
                <button type="submit" class="btn btn-primary mx-2">Envoyer</button>
                <a href="{{ path('home_index') }}" class="btn btn-secondary mx-2">Annuler</a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}